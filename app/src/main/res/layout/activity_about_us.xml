<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".General.AboutUs">

        <!-- Top Navigation Bar -->
        <LinearLayout
            android:id="@+id/top_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/baconnect_blue"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:src="@drawable/logo_baconnect_nobg"
                android:contentDescription="App Logo" />

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1" />

        </LinearLayout>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/top_navigation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/page_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="24dp"
                android:paddingBottom="32dp">

                <!-- Hero section with logo and title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About Us"
                        android:fontFamily="@font/montserrat_extrabold"
                        android:textSize="32sp"
                        android:textColor="@color/baconnect_blue"
                        android:layout_marginBottom="12dp" />

                    <View
                        android:layout_width="60dp"
                        android:layout_height="4dp"
                        android:background="@color/baconnect_blue"
                        android:layout_marginBottom="12dp" />

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:src="@drawable/logo_baconnect_nobg_blue"
                        android:scaleType="centerInside"
                        android:contentDescription="BaConnect Logo"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Building a better city together"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:textAlignment="center"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#cacaca"
                    android:layout_marginBottom="12dp" />

                <!-- Mission Card with background -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#F5F9FF"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <View
                                android:layout_width="4dp"
                                android:layout_height="24dp"
                                android:background="@color/baconnect_blue"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Our Mission"
                                android:fontFamily="@font/montserrat_extrabold"
                                android:textSize="18sp"
                                android:textColor="@color/baconnect_blue" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="To institute good governance, promote culture, trade and investment in the City, through modern technology towards a safe and sound environment."
                            android:fontFamily="@font/poppins_light"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:lineSpacingExtra="5dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Vision Card with background -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#F5F9FF"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <View
                                android:layout_width="4dp"
                                android:layout_height="24dp"
                                android:background="@color/baconnect_blue"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Our Vision"
                                android:fontFamily="@font/montserrat_extrabold"
                                android:textSize="18sp"
                                android:textColor="@color/baconnect_blue" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="To institute good governance, promote culture, trade and investment in the City, through modern technology towards a safe and sound environment."
                            android:fontFamily="@font/poppins_light"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:lineSpacingExtra="5dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#cacaca"
                    android:layout_marginBottom="12dp" />


                <!-- Team Header with better spacing -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="60px"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="28dp"
                        android:background="@color/baconnect_blue"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meet the Team"
                        android:fontFamily="@font/montserrat_extrabold"
                        android:textSize="22sp"
                        android:textColor="@color/baconnect_blue"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A passionate group of developers from St. Dominic College of Asia"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- Developer Grid with improved cards and shadows -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:useDefaultMargins="false">

                    <!-- Developer 1 -->
                    <LinearLayout
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="4dp"
                            android:layout_marginBottom="12dp">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/manuel"
                                android:scaleType="centerCrop"
                                android:contentDescription="Manuel" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manuel"
                            android:fontFamily="@font/montserrat_extrabold"
                            android:textSize="14sp"
                            android:textColor="@color/baconnect_blue"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Developer"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="12sp"
                            android:textColor="#888888" />
                    </LinearLayout>

                    <!-- Developer 2 -->
                    <LinearLayout
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="4dp"
                            android:layout_marginBottom="12dp">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ella"
                                android:scaleType="centerCrop"
                                android:contentDescription="Ella" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Elisan"
                            android:fontFamily="@font/montserrat_extrabold"
                            android:textSize="14sp"
                            android:textColor="@color/baconnect_blue"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Developer"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="12sp"
                            android:textColor="#888888" />
                    </LinearLayout>

                    <!-- Developer 3 -->
                    <LinearLayout
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="4dp"
                            android:layout_marginBottom="12dp">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/alynna"
                                android:scaleType="centerCrop"
                                android:contentDescription="Alynna" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marcial"
                            android:fontFamily="@font/montserrat_extrabold"
                            android:textSize="14sp"
                            android:textColor="@color/baconnect_blue"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Developer"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="12sp"
                            android:textColor="#888888" />
                    </LinearLayout>

                    <!-- Developer 4 -->
                    <LinearLayout
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="4dp"
                            android:layout_marginBottom="12dp">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/cesca"
                                android:scaleType="centerCrop"
                                android:contentDescription="Cesca" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sinsin"
                            android:fontFamily="@font/montserrat_extrabold"
                            android:textSize="14sp"
                            android:textColor="@color/baconnect_blue"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Developer"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="12sp"
                            android:textColor="#888888" />
                    </LinearLayout>

                </GridLayout>

                <!-- Team Description -->
                <TextView
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:paddingHorizontal="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We are Manuel, Elisan, Marcial, and Sinsin, students from St. Dominic College of Asia taking Bachelor of Science in Information Technology."
                    android:fontFamily="@font/poppins_light"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:lineSpacingExtra="5dp"
                    android:textAlignment="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

            </LinearLayout>
        </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:elevation="8dp"
        app:itemTextColor="@color/baconnect_blue"
        app:itemIconTint="@color/baconnect_blue"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

