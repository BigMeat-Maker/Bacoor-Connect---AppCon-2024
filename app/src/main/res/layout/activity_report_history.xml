<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@color/light_gray"
    tools:context=".Report.ReportHistoryActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- Header with blue background -->
    <LinearLayout
        android:id="@+id/top_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/baconnect_blue"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/menu_white"
            android:contentDescription="Menu"
            android:gravity="center_horizontal"/>

        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_baconnect_nobg"
            android:contentDescription="App Logo" />

        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/notification"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/notification_white"
            android:contentDescription="Notification"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <!-- Dashboard -->
    <androidx.cardview.widget.CardView
        android:id="@+id/dashboard_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@+id/top_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textColor="@color/baconnect_blue"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_extrabold"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Total Reports Card -->
                    <include
                        android:id="@+id/total_reports_card"
                        layout="@layout/item_dashboard_card"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp" />

                    <!-- Resolved Reports Card -->
                    <include
                        android:id="@+id/resolved_reports_card"
                        layout="@layout/item_dashboard_card"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp" />

                    <!-- Pending Reports Card -->
                    <include
                        android:id="@+id/pending_reports_card"
                        layout="@layout/item_dashboard_card"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp" />

                    <!-- In Progress Reports Card -->
                    <include
                        android:id="@+id/in_progress_reports_card"
                        layout="@layout/item_dashboard_card"
                        android:layout_width="120dp"
                        android:layout_height="120dp" />

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Action Buttons Container with Elevation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/button_container_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@+id/dashboard_card">

        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/export_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/baconnect_blue"
                android:paddingVertical="12dp"
                android:text="Export Report"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_export"
                app:iconGravity="textStart"
                android:fontFamily="@font/poppins_bold"
                android:includeFontPadding="false"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/print_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:paddingVertical="12dp"
                android:text="Print Report"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_print"
                app:iconGravity="textStart"
                android:fontFamily="@font/poppins_bold"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/report_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_container_card"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No report history found"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_dashboard"
        app:menu="@menu/dashboard_menu"
        app:itemIconTint="@color/baconnect_blue"/>

</androidx.drawerlayout.widget.DrawerLayout>