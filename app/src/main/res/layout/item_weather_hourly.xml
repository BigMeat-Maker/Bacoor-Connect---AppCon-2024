<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center"
    android:layout_marginEnd="12dp">

    <TextView
        android:id="@+id/textHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 PM"
        android:textSize="14sp"
        android:textColor="@color/item_text_color"
        android:fontFamily="@font/poppins_bold" />

    <ImageView
        android:id="@+id/imageWeatherIconNight"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/weather_night"
        android:layout_marginHorizontal="6dp"
        android:contentDescription="Weather Icon"
        app:tint="@color/baconnect_blue" />

    <ImageView
        android:id="@+id/imageWeatherIconExtHot"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/weatersupersunny"
        android:layout_marginHorizontal="6dp"
        android:contentDescription="Weather Icon" />

    <ImageView
        android:id="@+id/imageWeatherIconCloudy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/weathersunny"
        android:layout_marginHorizontal="6dp"
        android:contentDescription="Weather Icon" />

    <ImageView
        android:id="@+id/imageWeatherIconpartlycloudy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/weather_partlycloudy"
        android:layout_marginHorizontal="6dp"
        android:contentDescription="Weather Icon" />

    <ImageView
        android:id="@+id/imageWeatherIconpartlynightcloudy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/weather_night_cloudy"
        android:layout_marginHorizontal="6dp"
        android:contentDescription="Weather Icon" />


    <TextView
        android:id="@+id/textTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="32Â°C"
        android:textSize="14sp"
        android:textColor="@color/item_text_color"
        android:fontFamily="@font/poppins_bold"/>
</LinearLayout>
