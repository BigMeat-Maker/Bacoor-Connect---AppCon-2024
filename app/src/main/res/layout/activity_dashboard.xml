<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Emergency.EmergencyHotlines">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clipToPadding="false"
            android:paddingHorizontal="16dp">

            <!-- Emergency Hotlines Section -->
            <!-- <CHANGE> Added consistent margin structure for section headers -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Hotlines"
                android:fontFamily="@font/montserrat_extrabold"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black" />

            <!-- Hotlines Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginBottom="8dp"
                android:baselineAligned="false">

                <!-- RER 161 -->
                <LinearLayout
                    android:id="@+id/hotline_rer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginEnd="6dp"
                    android:background="?attr/selectableItemBackground"
                    android:backgroundTint="#F5F5F5">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/logo_alert161"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RER 161"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <!-- BDRRMO -->
                <LinearLayout
                    android:id="@+id/hotline_bdrrmo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginHorizontal="3dp"
                    android:background="?attr/selectableItemBackground"
                    android:backgroundTint="#F5F5F5">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/hotline_bdrrmo"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BDRRMO"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <!-- PNP -->
                <LinearLayout
                    android:id="@+id/hotline_pnp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginStart="6dp"
                    android:background="?attr/selectableItemBackground"
                    android:backgroundTint="#F5F5F5">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/hotline_pnp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PNP Bacoor"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <!-- BFP -->
                <LinearLayout
                    android:id="@+id/hotline_bfp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginEnd="6dp"
                    android:background="?attr/selectableItemBackground"
                    android:backgroundTint="#F5F5F5">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/hotline_bfp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BFP Bacoor"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- <CHANGE> Enhanced divider styling -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#F0F0F0"
                android:layout_marginVertical="16dp"/>

            <!-- Emergency Resources Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Resources"
                android:fontFamily="@font/montserrat_extrabold"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/black" />

            <!-- Emergency Resources Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="32dp"
                android:baselineAligned="false">

                <!-- Hospitals -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_hospitals"
                    android:layout_width="0dp"
                    android:layout_height="128dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#10176d">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/drawer_hospital"
                            android:scaleType="fitCenter"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hospital Directory"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_marginTop="12dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Emergency Guides -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_emergency_guides"
                    android:layout_width="0dp"
                    android:layout_height="128dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#BC1206">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/drawer_emergency"
                            android:scaleType="fitCenter"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emergency Guides"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_marginTop="12dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#F0F0F0"
                android:layout_marginVertical="16dp"/>

            <!-- Quick Access Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quick Access"
                android:fontFamily="@font/montserrat_extrabold"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/black" />

            <!-- Quick Access Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="12dp"
                android:baselineAligned="false">

                <!-- Traffic Map -->
                <LinearLayout
                    android:id="@+id/quick_map"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="14dp"
                    android:layout_marginHorizontal="4dp"
                    android:background="?attr/selectableItemBackground"
                    android:backgroundTint="#FAFAFA">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/trafficmap"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Map"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Service -->
                <LinearLayout
                    android:id="@+id/quick_service"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="14dp"
                    android:layout_marginHorizontal="4dp"
                    android:background="?attr/selectableItemBackground"
                    android:backgroundTint="#FAFAFA">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/services"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Report History -->
                <LinearLayout
                    android:id="@+id/quick_history"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="14dp"
                    android:layout_marginHorizontal="4dp"
                    android:background="?attr/selectableItemBackground"
                    android:backgroundTint="#FAFAFA">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/reporthistory"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="History"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Placeholder for alignment -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible"/>
            </LinearLayout>

            <!-- Quick Access Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:baselineAligned="false">

                <!-- Profile -->
                <LinearLayout
                    android:id="@+id/quick_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="14dp"
                    android:layout_marginHorizontal="4dp"
                    android:background="?attr/selectableItemBackground"
                    android:backgroundTint="#FAFAFA">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/drawer_profile"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- About -->
                <LinearLayout
                    android:id="@+id/quick_about"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="14dp"
                    android:layout_marginHorizontal="4dp"
                    android:background="?attr/selectableItemBackground"
                    android:backgroundTint="#FAFAFA">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/about"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Feedback -->
                <LinearLayout
                    android:id="@+id/quick_feedback"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="14dp"
                    android:layout_marginHorizontal="4dp"
                    android:background="?attr/selectableItemBackground"
                    android:backgroundTint="#FAFAFA">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/feedback"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feedback"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>