<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Timeline vertical line -->
    <View
        android:id="@+id/timeline_line"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="#4383d8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp" />

    <!-- Timeline circle (dot) -->
    <View
        android:id="@+id/today_dot"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/timeline_circle"
        app:layout_constraintStart_toStartOf="@id/timeline_line"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="-7dp" />

    <!-- Date Label -->
    <TextView
        android:id="@+id/earthquakeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"

        android:fontFamily="@font/montserrat_extrabold"
        app:layout_constraintStart_toEndOf="@id/today_dot"
        app:layout_constraintTop_toTopOf="@id/today_dot"
        app:layout_constraintBottom_toBottomOf="@id/today_dot"
        android:layout_marginStart="8dp"
        android:includeFontPadding="false" />


    <!-- Card View (Earthquake Info) -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/todayCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"

        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toEndOf="@id/timeline_line"
        app:layout_constraintTop_toBottomOf="@id/earthquakeDate"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row for magnitude + details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <!-- Magnitude Circle -->
            <TextView
                android:id="@+id/magnitudeText"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:background="@drawable/magnitude_circle"
                android:text="M 4.5"
                android:fontFamily="@font/montserrat_extrabold"
                android:includeFontPadding="false"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14sp" />

            <!-- Details Column -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 miles from Manila"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_extrabold"
                    android:includeFontPadding="false"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06:07 AM"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Weekly dot -->
    <View
        android:id="@+id/weekly_dot"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/timeline_circle"
        app:layout_constraintStart_toStartOf="@id/timeline_line"
        app:layout_constraintTop_toBottomOf="@+id/todayCard"
        android:layout_marginTop="24dp"
        android:layout_marginStart="-7dp" />

    <TextView
        android:id="@+id/weeklyDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oct. 5 - 11"
        android:textColor="@color/baconnect_blue"
        android:textSize="24sp"
        android:fontFamily="@font/montserrat_extrabold"
        app:layout_constraintStart_toEndOf="@id/weekly_dot"
        app:layout_constraintTop_toTopOf="@id/weekly_dot"
        app:layout_constraintBottom_toBottomOf="@id/weekly_dot"
        android:layout_marginStart="8dp"
        android:includeFontPadding="false" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/weeklyCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"

        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@id/timeline_line"
        app:layout_constraintTop_toBottomOf="@id/weeklyDate"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:padding="8dp">

    <!-- Weekly summary 3-column layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total\nQuakes"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/baconnect_blue"
            android:fontFamily="@font/montserrat_extrabold"
            android:includeFontPadding="false"
            android:layout_marginTop="6dp"
            android:gravity="center"/>
    </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:background="#BDBDBD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Average\nMagnitude"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.5"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#ff7300"
            android:fontFamily="@font/montserrat_extrabold"
            android:includeFontPadding="false"
            android:layout_marginTop="6dp"
            android:gravity="center"/>
    </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:background="#BDBDBD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Strongest\nMagnitude"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5.5"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#ff3a3a"
            android:fontFamily="@font/montserrat_extrabold"
            android:includeFontPadding="false"
            android:layout_marginTop="6dp"
            android:gravity="center"/>
    </LinearLayout>
    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
