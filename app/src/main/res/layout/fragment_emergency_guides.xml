                                android:layout_height="56dp"
                                android:layout_gravity="bottom|end"
                                android:layout_margin="8dp"
                                android:src="@drawable/zoom_image"
                                android:contentDescription="Zoom Icon"
                                android:background="@drawable/zoom_bg"
                                android:padding="4dp" />
