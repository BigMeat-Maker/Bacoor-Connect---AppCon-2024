<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Header with Icon and Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/dialog_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/dialog_service_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Service Name"
            android:fontFamily="@font/montserrat_extrabold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="16dp"/>

    <!-- Description -->
    <TextView
        android:id="@+id/dialog_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Service Description"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="16dp"/>

    <!-- Contact Number Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_call"
            android:tint="#2B3381"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:fontFamily="@font/poppins_light"
                android:textSize="12sp"
                android:textColor="#999999"/>

            <TextView
                android:id="@+id/dialog_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(046) 123-4567"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                android:textColor="#2B3381"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Address Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_dialog_map"
            android:tint="#2B3381"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="2dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:fontFamily="@font/poppins_light"
                android:textSize="12sp"
                android:textColor="#999999"/>

            <TextView
                android:id="@+id/dialog_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123 Main Street, Bacoor, Cavite"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="16dp"/>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/dialog_btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLOSE"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#666666"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginEnd="8dp"
            style="?attr/materialButtonOutlinedStyle"/>

        <Button
            android:id="@+id/dialog_btn_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALL NOW"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:backgroundTint="#2B3381"/>
    </LinearLayout>

</LinearLayout>
