<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- User info from Register activity -->
    <TextView
        android:id="@+id/userDetailsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload your Selfie"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />


    <!-- ImageView for displaying selfie -->
    <ImageView
        android:id="@+id/selfieImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@android:drawable/ic_menu_camera"
        android:contentDescription="Uploaded Selfie"
        android:layout_marginBottom="16dp"/>

    <!-- Button for uploading selfie -->
    <Button
        android:id="@+id/uploadSelfieButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Selfie" />

    <!-- Submit button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />
</LinearLayout>
