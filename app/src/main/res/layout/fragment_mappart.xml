<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Helpers.Mappart">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.osmdroid.views.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Filter Image Button -->
        <ImageView
            android:id="@+id/btn_filter_toggle"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_filter"
            android:background="@drawable/round_button_background"
            android:layout_margin="16dp"
            android:elevation="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:contentDescription="Filter reports"/>

        <!-- Category Buttons - COMPLETELY TRANSPARENT BACKGROUND -->
        <Button
            android:id="@+id/btn_filter_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:backgroundTint="@color/baconnect_blue"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_below="@id/btn_filter_toggle"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:textAllCaps="false"
            android:elevation="6dp"/>

        <Button
            android:id="@+id/btn_filter_accident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accident"
            android:backgroundTint="@color/baconnect_blue"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_below="@id/btn_filter_all"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:padding="12dp"
            android:textAllCaps="false"
            android:elevation="6dp"/>

        <Button
            android:id="@+id/btn_filter_fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fire"
            android:backgroundTint="@color/baconnect_blue"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_below="@id/btn_filter_accident"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:padding="12dp"
            android:textAllCaps="false"
            android:elevation="6dp"/>

        <Button
            android:id="@+id/btn_filter_traffic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Traffic"
            android:backgroundTint="@color/baconnect_blue"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_below="@id/btn_filter_fire"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:padding="12dp"
            android:textAllCaps="false"
            android:elevation="6dp"/>

        <Button
            android:id="@+id/btn_filter_natural"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Natural"
            android:backgroundTint="@color/baconnect_blue"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_below="@id/btn_filter_traffic"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:padding="12dp"
            android:textAllCaps="false"
            android:elevation="6dp"/>

        <Button
            android:id="@+id/btn_recenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recenter"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/baconnect_blue"
            android:layout_margin="16dp"
            android:elevation="4dp"
            android:padding="8dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</FrameLayout>