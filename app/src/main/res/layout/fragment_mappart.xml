<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Helpers.Mappart">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.osmdroid.views.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Filter Image Button -->
        <ImageView
            android:id="@+id/btn_filter_toggle"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_filter"
            android:background="@drawable/round_button_background"
            android:layout_margin="16dp"
            android:elevation="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:contentDescription="Filter reports"/>

        <!-- Category Buttons - Using ImageView with your specific drawables -->
        <!-- All Button -->
        <ImageView
            android:id="@+id/btn_filter_all"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_filter"
            android:background="@drawable/round_button_background"
            android:visibility="gone"
            android:layout_below="@id/btn_filter_toggle"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:elevation="6dp"
            android:contentDescription="All reports"/>

        <!-- Accident Button -->
        <ImageView
            android:id="@+id/btn_filter_accident"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/button_accident"
            android:background="@drawable/round_button_background"
            android:visibility="gone"
            android:layout_below="@id/btn_filter_all"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:elevation="6dp"
            android:contentDescription="Accident reports"/>

        <!-- Fire Button -->
        <ImageView
            android:id="@+id/btn_filter_fire"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/button_fire"
            android:background="@drawable/round_button_background"
            android:visibility="gone"
            android:layout_below="@id/btn_filter_accident"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:elevation="6dp"
            android:contentDescription="Fire reports"/>

        <!-- Traffic Button -->
        <ImageView
            android:id="@+id/btn_filter_traffic"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/button_traffic"
            android:background="@drawable/round_button_background"
            android:visibility="gone"
            android:layout_below="@id/btn_filter_fire"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:elevation="6dp"
            android:contentDescription="Traffic reports"/>

        <!-- Natural Disaster Button -->
        <ImageView
            android:id="@+id/btn_filter_natural"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/button_disaster"
            android:background="@drawable/round_button_background"
            android:visibility="gone"
            android:layout_below="@id/btn_filter_traffic"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:elevation="6dp"
            android:contentDescription="Natural disaster reports"/>

        <!-- Recenter Button (Keep as Button) -->
        <Button
            android:id="@+id/btn_recenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recenter"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/baconnect_blue"
            android:layout_margin="16dp"
            android:elevation="4dp"
            android:padding="8dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</FrameLayout>