<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <!--individual post view pag pinindot yung post sa dashboard-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="#2B3381"
            android:padding="12dp">

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:src="@drawable/menu_white"
                android:contentDescription="Menu" />

            <View
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="8dp"
                android:src="@drawable/bacoorlogo"
                android:contentDescription="App Logo" />

            <View
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:src="@drawable/notification_white"
                android:contentDescription="Notification" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="15dp"/>

        <!--page content-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <!-- profile pic, location tag/text, post flair tag, time-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/userpfp_report"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/profile"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/location"
                            android:layout_marginEnd="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@+id/location_text"
                            android:textSize="13sp"
                            android:textColor="@android:color/black"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <!-- time since posting, like 1HR or 2D-->
                        <TextView
                            android:id="@+id/time_display_report"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="37M"
                            android:textSize="13sp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/tag_roadaccident"
                            android:layout_marginTop="5dp"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <ImageView
                            android:layout_margin="5dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/post_option"
                            android:layout_marginTop="5dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <!--image attached to the post-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/report_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/carcrash"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/report_description"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:text="may bangaan dito. kanina pa nandito ayaw pa alisin"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp">

                <!--UPVOTE-->
                <ImageView
                    android:id="@+id/upvote_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/upvote_filled"/>
                <TextView
                    android:id="@+id/upvote_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"/>

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>

                <!--DOWNVOTE-->
                <ImageView
                    android:id="@+id/downvote_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/downvote_blank"/>
                <TextView
                    android:id="@+id/downvote_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <!--COMMENT-->
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/comment"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>