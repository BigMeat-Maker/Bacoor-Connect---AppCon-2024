<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TOC_ACT"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    tools:context=".General.TOC">

    <View
        android:layout_width="match_parent"
        android:layout_height="18sp"
        android:id="@+id/topDiv">
    </View>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/termsScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#E8E8E8"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomDiv"
        app:layout_constraintTop_toBottomOf="@+id/topDiv">

        <TextView
            android:id="@+id/termsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/toc"/>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomDiv"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="18dp"
        android:background="@color/baconnect_blue"
        app:layout_constraintTop_toTopOf="@+id/termsTextView"
        app:layout_constraintBottom_toBottomOf="parent">

    <CheckBox
        android:id="@+id/TOCCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="I agree to the Terms and Conditions."
        app:layout_constraintBottom_toTopOf="@+id/proceedButton"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/light_gray"
        android:buttonTint="#E5EAFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/termsTextView"/>

    <Button
        android:id="@+id/proceedButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:enabled="false"
        android:textColor="@color/baconnect_blue"
        android:backgroundTint="@color/light_gray"
        android:text="PROCEED"
        app:layout_constraintBottom_toBottomOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>