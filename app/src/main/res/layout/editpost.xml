<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="#2B3381"
        android:padding="12dp">

        <ImageView
            android:id="@+id/exit_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:src="@drawable/cancel"
            android:contentDescription="Menu" />

        <TextView
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Post"
            android:fontFamily="@font/montserrat_extrabold"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>
        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="25dp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/location"
                android:layout_marginRight="5dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/descriptionbox"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/LocationText"
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="@+id/location_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/ChangeMapLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_regular"
                        android:padding="5dp"
                        android:text="CHANGE"
                        android:textColor="#504F4F"
                        android:textSize="13sp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <!-- Row 1, Column 1: Image 1 + Radio Button -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:gravity="start|center_vertical">

                    <RadioButton
                        android:id="@+id/RoadAccRadio"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"/>

                    <ImageView
                        android:id="@+id/RoadAccident"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:src="@drawable/tag_roadaccident"
                        android:layout_marginEnd="8dp"/>

                </LinearLayout>

                <!-- Row 1, Column 2: Image 2 + Radio Button -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:gravity="start|center_vertical">

                    <RadioButton
                        android:id="@+id/FireRadio"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"/>

                    <ImageView
                        android:id="@+id/Fire"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:src="@drawable/tag_fire"
                        android:layout_marginEnd="8dp"/>

                </LinearLayout>

                <!-- Row 2, Column 1: Image 3 + Radio Button -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:gravity="start|center_vertical">

                    <RadioButton
                        android:id="@+id/TrafficRadio"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"/>


                    <ImageView
                        android:id="@+id/TrafficReport"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:src="@drawable/tag_traffic"
                        android:layout_marginEnd="8dp"/>

                </LinearLayout>

                <!-- Row 2, Column 2: Image 4 + Radio Button -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:gravity="start|center_vertical">

                    <RadioButton
                        android:id="@+id/DisasterRadio"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"/>

                    <ImageView
                        android:id="@+id/NaturalDisaster"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:src="@drawable/tag_disaster"
                        android:layout_marginEnd="8dp"/>
                </LinearLayout>
            </GridLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/description_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/descriptionbox"
                android:gravity="top|start"
                android:hint="Report Description"
                android:fontFamily="@font/poppins_regular"
                android:lines="1"
                android:maxLines="5"
                android:minLines="1"
                android:padding="13dp"
                android:scrollbars="vertical"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Card 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/Useruploadedimage1"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/carcrash"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/Addimage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add_image"
                android:layout_marginRight="5dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/Updatepost"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="UPDATE POST"
                android:fontFamily="@font/poppins_bold"
                android:backgroundTint="#2B3381"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>


    </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>