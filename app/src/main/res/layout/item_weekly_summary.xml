<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="3">

        <!-- Total Quakes Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total\nQuakes"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/totalQuakesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/baconnect_blue"
                android:layout_marginTop="6dp"
                android:gravity="center"/>
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:background="#BDBDBD"/>

        <!-- Average Magnitude Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Average\nMagnitude"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/averageMagText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.5"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#ff7300"
                android:layout_marginTop="6dp"
                android:gravity="center"/>
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:background="#BDBDBD"/>

        <!-- Strongest Magnitude Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Strongest\nMagnitude"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/strongestMagText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.5"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#ff3a3a"
                android:layout_marginTop="6dp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>